<h1>Web Worker Tests</h1>

<div id="test-results">
  <p>Running tests...</p>
</div>

<script type="module">
  import { runTests } from '/js/worker-tests.js';

  // Run tests when page loads
  document.addEventListener('DOMContentLoaded', async () => {
    const resultsDiv = document.getElementById('test-results');

    try {
      const success = await runTests();
      resultsDiv.innerHTML = `
        <h2>Test Results</h2>
        <p class="${success ? 'text-green-600' : 'text-red-600'}">
          ${success ? 'All tests passed!' : 'Some tests failed!'}
        </p>
        <p>Check the browser console for detailed results.</p>
      `;
    } catch (error) {
      resultsDiv.innerHTML = `
        <h2>Test Results</h2>
        <p class="text-red-600">Tests failed with error: ${error.message}</p>
      `;
    }
  });
</script>