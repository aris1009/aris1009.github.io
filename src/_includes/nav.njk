<header role="banner">
    <!-- Burger Menu Container -->
    <div class="burger-menu-container">
        <!-- Burger Button -->
        <burger-menu overlay-id="burger-overlay">
        <button data-testid="burger-toggle" id="burger-toggle" data-trigger class="burger-button" aria-label="Toggle menu" aria-expanded="false" title="Menu">
            <div class="burger-icon">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </div>
        </button>
        </burger-menu>

        <!-- Controls Container (Theme + Language) -->
        <div class="header-controls">
            <!-- Animated Dark Mode Toggle Pill -->
            <theme-toggle>
            <div data-testid="theme-toggle-container" class="theme-toggle-container">
                <button id="theme-toggle" data-trigger class="theme-toggle-pill" aria-label="Toggle dark mode" title="Toggle dark/light mode">
                    <div class="toggle-slider">
                        <svg class="toggle-icon sun-icon" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                        </svg>
                        <svg class="toggle-icon moon-icon" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                        </svg>
                    </div>
                </button>
            </div>
            </theme-toggle>
            
            <!-- Language Selector -->
            <language-selector>
            <div data-testid="language-selector-container" class="language-selector-container">
                <button id="language-toggle" class="language-selector" aria-label="Select language" title="Change language">
                    <span id="current-language" class="language-display">
                        {% if '/blog/el/' in page.url or '/el/' in page.url %}
                            <span class="flag">ðŸ‡¬ðŸ‡·</span>
                        {% elif '/blog/tr/' in page.url or '/tr/' in page.url %}
                            <span class="flag">ðŸ‡¹ðŸ‡·</span>
                        {% else %}
                            <span class="flag">ðŸ‡ºðŸ‡¸</span>
                        {% endif %}
                    </span>
                </button>
                <div id="language-dropdown" class="language-dropdown">
                    <a href="#" class="language-option" data-lang="en-us"><span class="flag">ðŸ‡ºðŸ‡¸</span></a>
                    <a href="#" class="language-option" data-lang="el"><span class="flag">ðŸ‡¬ðŸ‡·</span></a>
                    <a href="#" class="language-option" data-lang="tr"><span class="flag">ðŸ‡¹ðŸ‡·</span></a>
                </div>
            </div>
            </language-selector>
    </div>
    
    <!-- Burger Menu Overlay -->
    <div id="burger-overlay" data-overlay class="burger-overlay">
        <div class="burger-menu-content">
            <!-- Site Branding in Menu -->
            <div class="burger-branding">
                <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/{% else %}/{% endif %}" class="burger-title-link">
                    <div class="burger-title">{{meta.siteName}}</div>
                    <p class="burger-motto">{{meta.motto}}</p>
                </a>
            </div>
            
            <!-- Navigation Links -->
            <nav class="burger-nav" role="navigation" aria-label="Main navigation">
                <!-- Primary Navigation Section -->
                <ul class="burger-nav-links burger-nav-primary">
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/{% else %}/{% endif %}" class="burger-nav-link">{{ 'home.title' | i18n }}</a>
                    </li>
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/about/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/about/{% else %}/en-us/about/{% endif %}" class="burger-nav-link">{{ 'nav.about' | i18n }}</a>
                    </li>
                </ul>

                <!-- Resources Section -->
                <ul class="burger-nav-links burger-nav-secondary">
                    <sl-divider></sl-divider>
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/dictionary/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/dictionary/{% else %}/en-us/dictionary/{% endif %}" class="burger-nav-link">{{ 'dictionary.title' | i18n }}</a>
                    </li>
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/ai-toolset/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/ai-toolset/{% else %}/en-us/ai-toolset/{% endif %}" class="burger-nav-link">{{ 'nav.aiToolset' | i18n }}</a>
                    </li>
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/ai-disclaimer/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/ai-disclaimer/{% else %}/en-us/ai-disclaimer/{% endif %}" class="burger-nav-link">{{ 'nav.aiDisclaimer' | i18n }}</a>
                    </li>
                    <li>
                        <a href="{% if '/blog/el/' in page.url or '/el/' in page.url %}/el/acknowledgements/{% elif '/blog/tr/' in page.url or '/tr/' in page.url %}/tr/acknowledgements/{% else %}/en-us/acknowledgements/{% endif %}" class="burger-nav-link">{{ 'nav.acknowledgements' | i18n }}</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>
