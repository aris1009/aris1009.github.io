                <div class="language-selector-container">
                    <button id="language-toggle" class="language-selector" aria-label="Select language" title="Change language">
                        <span id="current-language" class="language-display">
                            {% if '/blog/el/' in page.url or page.url == '/el/' %}
                                <span class="flag">ðŸ‡¬ðŸ‡·</span>
                            {% elif '/blog/tr/' in page.url or page.url == '/tr/' %}
                                <span class="flag">ðŸ‡¹ðŸ‡·</span>
                            {% elif '/blog/en-us/' in page.url or page.url == '/' %}
                                <span class="flag">ðŸ‡ºðŸ‡¸</span>
                            {% else %}
                                <span class="flag">ðŸ‡ºðŸ‡¸</span>
                            {% endif %}
                        </span>
                    </button>
                    <div id="language-dropdown" class="language-dropdown">
                        {% if '/blog/' in page.url %}
                            {% set blogSlug = page.url | replace('/blog/en-us/', '') | replace('/blog/el/', '') | replace('/blog/tr/', '') | replace('/', '') %}
                            <a href="/blog/en-us/{{ blogSlug }}/" class="language-option" data-lang="en-us">
                                <span class="flag">ðŸ‡ºðŸ‡¸</span>
                            </a>
                            <a href="/blog/el/{{ blogSlug }}/" class="language-option" data-lang="el">
                                <span class="flag">ðŸ‡¬ðŸ‡·</span>
                            </a>
                            <a href="/blog/tr/{{ blogSlug }}/" class="language-option" data-lang="tr">
                                <span class="flag">ðŸ‡¹ðŸ‡·</span>
                            </a>
                        {% else %}
