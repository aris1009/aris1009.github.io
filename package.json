{
  "scripts": {
    "dev": "npm-run-all clean css:website:dev --parallel eleventy:serve css:website:dev",
    "build": "run-s clean css:website css:analyze build:js eleventy",
    "clean": "rimraf _site",
    "css:website": "npm-run-all css:components css:critical",
    "css:components": "node scripts/build-components.js",
    "css:critical": "node scripts/build-critical.js",
    "css:analyze": "run-s css:build css:size-check",
    "css:build": "postcss src/_tailwindCSS/raw-website.css -o _site/css/style.css --map",
    "css:size-check": "node scripts/bundle-analyzer.js _site/css/style.css",
    "eleventy": "eleventy",
    "css:website:dev": "npx tailwindcss -i src/_tailwindCSS/raw-website.css -o _site/css/style.css --watch --minify",
    "dev:11ty": "eleventy --serve --watch",
    "start": "npm run dev",
    "new-post": "node scripts/generate-blog-post.js",
    "test": "CI=true vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lhci autorun --config=.lighthouserc.js",
    "lighthouse:mobile": "lhci autorun --config=.lighthouserc.js --preset=mobile",
    "links": "node scripts/process-links.js",
    "image-perf": "node scripts/measure-image-performance.js",
    "prepare": "husky",
    "build:js": "rollup -c"
  },
  "name": "blog",
  "version": "1.0.0",
  "description": "Security & Technology Blog",
  "main": "index.js",
  "keywords": [
    "blog",
    "security",
    "11ty",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^6.0.2",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.57.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "acclaimed": "^1.0.12",
    "autoprefixer": "^10.4.23",
    "eleventy-plugin-reading-time": "^0.0.1",
    "html-minifier": "^4.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lighthouse": "^12.3.0",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "penthouse": "^2.3.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "puppeteer": "^24.35.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.19",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.5",
    "eleventy-plugin-i18n": "^0.1.3"
  }
}
