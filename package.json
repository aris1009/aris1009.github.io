{
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-s clean css:website eleventy",
    "clean": "rimraf _site",
    "css:website": "npx tailwindcss -i src/_tailwindCSS/raw-website.css -o _site/css/style.css --minify",
    "eleventy": "eleventy",
    "dev:css": "npx tailwindcss -i src/_tailwindCSS/raw-website.css -o _site/css/style.css --watch --minify",
    "dev:11ty": "eleventy --serve --watch",
    "start": "npm run dev",
    "new-post": "node scripts/generate-blog-post.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "name": "blog",
  "version": "1.0.0",
  "description": "Security & Technology Blog",
  "main": "index.js",
  "keywords": [
    "blog",
    "security",
    "11ty",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/typography": "^0.5.10",
    "eleventy-plugin-reading-time": "^0.0.1",
    "html-minifier": "^4.0.0",
    "luxon": "^3.4.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "eleventy-plugin-i18n": "^0.1.3"
  }
}
