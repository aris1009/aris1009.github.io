{
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-s clean detect-languages build:prism favicons css:website eleventy",
    "build:prod": "NODE_ENV=production run-s clean detect-languages build:prism favicons eleventy css:website",
    "detect-languages": "node scripts/detect-prism-languages.js",
    "build:prism": "node scripts/build-prism.js",
    "favicons": "node scripts/generate-favicons.js",
    "clean": "rimraf _site",
    "css:website": "npx tailwindcss -i src/_tailwindCSS/raw-website.css -o _site/css/style.css --minify --postcss",
    "eleventy": "eleventy",
    "dev:css": "npx tailwindcss -i src/_tailwindCSS/raw-website.css -o _site/css/style.css --watch --minify",
    "dev:11ty": "eleventy --serve --watch",
    "start": "npm run dev",
    "new-post": "node scripts/generate-blog-post.js",
    "test": "CI=true vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "links": "node scripts/process-links.js",
    "image-perf": "node scripts/measure-image-performance.js",
    "bundle:check": "du -h _site/css/style.css",
    "prepare": "husky"
  },
  "name": "blog",
  "version": "1.0.0",
  "description": "AI & Security Blog",
  "main": "index.js",
  "keywords": [
    "blog",
    "security",
    "11ty",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.2",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@html-to/text-cli": "^0.5.4",
    "@kevingimbel/eleventy-plugin-mermaid": "^3.0.1",
    "@playwright/test": "^1.57.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "eleventy-plugin-reading-time": "^0.0.1",
    "html-minifier": "^4.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prismjs": "^1.30.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.19",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.5",
    "eleventy-plugin-i18n": "^0.1.3",
    "eleventy-plugin-toc": "^1.1.5"
  },
  "bundleSizeLimit": {
    "css": 35000
  }
}
